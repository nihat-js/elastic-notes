{
  "manifest_version": 3,
  "name": "Niko's extension",
  "version": "1.0",
  "description": "A simple web extension.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}